  },

  "anti_nostalgia": {
    "_note": "Terms that indicate forward-looking framing (negative signal)",
    "weight": -0.5,
    "terms": [
      "forward", "future", "tomorrow", "new", "next",
      "progress", "innovation", "modern", "build",
      "opportunity", "reimagine", "transform"
    ],
    "phrases": [
      "build back better", "move forward", "new way forward",
      "look ahead", "the future is", "next generation",
      "a new chapter", "turn the page", "fresh start",
      "21st century", "forge ahead", "path forward"
    ]
  },

  "labeling_rules": {
    "positive_threshold": 2.5,
    "negative_threshold": -1.0,
    "min_terms_for_positive": 2,
    "paragraph_min_words": 15,
    "_note": "A paragraph is labeled nostalgic (1) if weighted_score >= positive_threshold AND at least min_terms_for_positive nostalgic markers are found. Anti-nostalgia terms reduce the score. Paragraphs below min_words are skipped."
  }
}
