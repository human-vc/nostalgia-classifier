{
  "_description": "Nostalgia lexicon for political advertising. Based on temporal framing theory (Brader 2006, Albertson & Gadarian 2015) and campaign rhetoric analysis. Each category has anchor terms and weighted modifiers.",

  "restoration": {
    "weight": 1.0,
    "terms": [
      "restore", "return", "bring back", "take back", "reclaim",
      "rebuild", "renew", "revive", "recover", "resurrect"
    ],
    "phrases": [
      "make america great again", "return to greatness", "take our country back",
      "restore the american dream", "bring back jobs", "return to normalcy",
      "reclaim our future", "restore order", "bring back prosperity",
      "take america back", "restore faith", "bring america back"
    ]
  },

  "temporal_past": {
    "weight": 0.8,
    "terms": [
      "remember", "once", "before", "ago", "used to",
      "back when", "there was a time", "in those days"
    ],
    "phrases": [
      "remember when", "four years ago", "not long ago",
      "there was a time when", "we used to", "back in the day",
      "years ago", "things were different", "the way it used to be",
      "when i was growing up", "our parents knew", "our grandparents",
      "the america i grew up in", "the country we knew"
    ]
  },

  "golden_age": {
    "weight": 0.9,
    "terms": [
      "greatest", "golden", "prosperous", "thriving",
      "booming", "unmatched", "unprecedented"
    ],
    "phrases": [
      "greatest economy", "golden age", "american greatness",
      "the greatest country", "best economy", "strongest military",
      "most prosperous", "never been better", "peak prosperity",
      "the envy of the world", "shining city on a hill"
    ]
  },

  "values_tradition": {
    "weight": 0.7,
    "terms": [
      "traditional", "heritage", "legacy", "roots",
      "founding", "founders", "constitution", "patriot"
    ],
    "phrases": [
      "traditional values", "our values", "american values",
      "the way things were", "time-honored", "our heritage",
      "founding fathers", "what this country was built on",
      "the fabric of america", "our way of life",
      "god-given rights", "sacred traditions"
    ]
  },

  "decline_framing": {
    "weight": 0.6,
    "terms": [
      "lost", "losing", "forgotten", "abandoned",
      "eroded", "destroyed", "crumbling", "failing"
    ],
    "phrases": [
